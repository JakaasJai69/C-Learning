{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file and debug",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++23",
        "-ggdb",
        "-Wall",
        "-Wextra",
        "-Wconversion",
        "-Wsign-conversion",
        "-pedantic-errors",
        "-I${fileDirname}/includes",
        "-I${fileDirname}/includes/Third_Party",
        "-Werror",
        "${file}",
        "${file}/Programs/*",
        "${fileDirname}/main_functions.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ Release Compile Run",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++23",
        "-I${fileDirname}/includes",
        "-I${fileDirname}/includes/Third_Party",
        "-O2",
        "-DNDEBUG",
        "${file}",
        "${file}/Programs/*",
        "${fileDirname}/main_functions.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
